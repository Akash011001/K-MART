<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <EditText
            android:id="@+id/edit_acc_frag_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_border"
            android:ems="10"
            android:hint="Id"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <EditText
            android:id="@+id/edit_acc_frag_mobile_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_border"
            android:ems="10"
            android:hint="Mobile"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <EditText
            android:id="@+id/edit_acc_frag_pan_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_border"
            android:ems="10"
            android:hint="Pan"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <EditText
            android:id="@+id/edit_acc_frag_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_border"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <EditText
            android:id="@+id/edit_acc_frag_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_border"
            android:ems="10"
            android:hint="Location"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <Button
            android:id="@+id/edit_acc_frag_update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Update" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>