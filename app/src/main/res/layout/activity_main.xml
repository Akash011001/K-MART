<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="WELCOME TO"
            android:textAlignment="center"
            android:textColor="#52B69A"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="K-MART"
            android:textAlignment="center"
            android:textColor="#1A759F"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="243dp"
            android:layout_height="214dp"
            android:adjustViewBounds="false"
            android:background="@drawable/logofinal" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="GETSTARTED"
            android:textAlignment="center"
            android:textColor="#52B69A"
            android:textSize="24sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_btn_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Register"
            android:textAlignment="center"
            android:textSize="20sp"
            app:backgroundTint="#1A759F" />

        <TextView
            android:id="@+id/activity_main_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="already registered ? login here"
            android:textAlignment="center"
            android:textColor="#1A759F"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>